                @if (Icon != null)
                {
                    <div class="@ItemIconContainerClass" aria-hidden="true">
                        <Blazicon Svg="@Icon"/>
                    </div>
                }
                <span class="@ItemTitleClass">@Title</span>
                @if (TrailerContent != null)
