@if (Collapsible)
{
    <li class="@CollapsibleListItemClass">
        <div data-expanded="@((!Collapsed).ToString().ToLowerInvariant())" x-data="rzSidebarLinkItem"
             class="@CollapsibleInnerDivClass">
