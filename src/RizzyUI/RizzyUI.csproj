<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <LangVersion>12.0</LangVersion>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <EnableSourceControlManagerQueries>true</EnableSourceControlManagerQueries>
        <UseRazorSourceGenerator>true</UseRazorSourceGenerator>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>

    <UsingTask TaskName="SafelistBuildTask"
               TaskFactory="TaskHostFactory"
               AssemblyFile="..\RizzyUI.SafelistBuilder\bin\Debug\netstandard2.0\RizzyUI.SafelistBuilder.dll" />
    
    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <Content Remove="DefaultDocumentation.json" />
    </ItemGroup>
	
    <ItemGroup>
        <PackageReference Include="Blazicons" Version="2.0.28" />
        <PackageReference Include="TailwindMerge.NET" Version="0.3.0" />
        <PackageReference Include="DefaultDocumentation" Version="0.8.2" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.0" />
        <PackageReference Include="Blazor.HeroIcons" Version="2.1.5" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\RizzyUI.SafelistBuilder\RizzyUI.SafelistBuilder.csproj" ReferenceOutputAssembly="false"/>
    </ItemGroup>

    <ItemGroup>
        <UpToDateCheckBuilt Include="wwwroot/css/rizzyui.css" Set="Css" />
        <UpToDateCheckBuilt Include="tailwind.config.js" Set="Css" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Scripts\rizzyui-tailwind\plugin.js">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <Target Name="Tailwind" BeforeTargets="Build">
        <Exec Command="npm run css:build" />
    </Target>

    <Target Name="RunSafelistBuildTask" AfterTargets="Build">
        <SafelistBuildTask CssFilePath="rizzyui.css" OutputDirectory="Scripts/rizzyui-tailwind/" />
    </Target>

</Project>
