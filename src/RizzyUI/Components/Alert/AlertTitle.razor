@namespace RizzyUI

@using Blazicons
@inherits RizzyComponent

<h3 @attributes="@AdditionalAttributes" class="@RootClass()">@ChildContent</h3>

@code
{
    private const string _baseStyle = "text-sm font-semibold";
    private string _textCss = "text-info";

    [CascadingParameter]
	public AlertVariant Variant { get; set; }

    /// <summary>
    /// Child content for the alert title
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    protected override string? RootClass()
    {
        return TwMerge.Merge(AdditionalAttributes, _baseStyle, _textCss);
    }

    protected override void OnParametersSet()
    {
	    switch (Variant)
	    {
		    case AlertVariant.Information:
			    _textCss = "text-info";
			    break;
		    case AlertVariant.Success:
			    _textCss = "text-success";
			    break;
		    case AlertVariant.Warning:
			    _textCss = "text-warning";
			    break;
		    case AlertVariant.Danger:
			    _textCss = "text-danger";
			    break;
	    }

	    base.OnParametersSet();
    }
}
