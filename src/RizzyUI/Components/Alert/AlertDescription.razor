@namespace RizzyUI

@inherits RizzyComponent

<div @attributes="@AdditionalAttributes" class="@RootClass()">
    @ChildContent
</div>

@code
{
    private string _baseStyle = "text-xs font-medium sm:text-sm";

	/// <summary>
	/// Child content for the alert
	/// </summary>
	[Parameter]
	public RenderFragment? ChildContent { get; set; }

    protected override string? RootClass()
    {
        return TwMerge.Merge(AdditionalAttributes, _baseStyle);
    }

}
