
    @namespace RizzyUI
    @inherits RzComponent

    @if (!string.IsNullOrEmpty(_modulePath))
    {
        <script nonce="@Nonce">
        (function(){
	        const run = () => {
		        if (window.RizzyUI?.registerModuleOnce) {
			        window.RizzyUI.registerModuleOnce('@Name','@_modulePath');
		        }
	        };
	        if (window.Alpine) run();
	        else document.addEventListener('alpine:init', run, { once: true });
        })();		
        </script>
    }