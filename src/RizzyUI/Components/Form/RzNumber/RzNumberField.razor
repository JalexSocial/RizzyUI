
@typeparam TValue
@namespace RizzyUI
@using Rizzy
@inherits RzComponent<RzNumberFieldSlots>


<RzField @attributes="AdditionalAttributes" Id="@Id" class="@SlotClasses.GetBase()">
	<RzFieldLabel DisplayName="@DisplayName" For="@For" Required="Required"/>

	<RzNumberEdit TValue="TValue"
	              For="@For"
	              Placeholder="@Placeholder"
	              PrependIcon="@PrependIcon"
	              PrependText="@PrependText"
	              @attributes="InputAttributes"/>
	@if (FieldHelp != null)
	{
		<RzFieldHelp>@FieldHelp</RzFieldHelp>
	}
	<RzValidationMessage For="@For"/>
</RzField>