@using Blazicons

@namespace RizzyUI

@typeparam TValue
@inherits RizzyComponent

<label @attributes="AdditionalAttributes" class="@RootClass()">
	<div class="relative">
		<RzInputCheckbox @bind-Value="isChecked" class="@CheckboxClass" />
		@if (isChecked)
		{
			<div class="absolute inset-0 flex items-center justify-center">
				<Blazicon Svg="Parent?.CheckedIcon"/>
            </div>
		}
	</div>
	<span class="ml-2">@Title</span>
	@ChildContent
</label>