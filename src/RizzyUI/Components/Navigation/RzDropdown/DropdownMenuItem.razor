
@namespace RizzyUI
@using Blazicons
@inherits RzComponent

<HtmlElement Element="@EffectiveElement"
             @attributes="AdditionalAttributes"
             id="@Id"
             class="@RootClass()"
             role="menuitem"
             tabindex="-1"
             x-on:click="handleItemClick($event)"
             x-on:mousemove="handleItemMousemove($event)"
             aria-disabled="@(Disabled.ToString().ToLowerInvariant())"
             disabled="@(Disabled ? "disabled" : null)">
    @if (Icon != null)
    {
        <span class="@Theme.RzDropdownMenu.MenuItemIconSpan"><Blazicon Svg="@Icon" class="@Theme.RzDropdownMenu.MenuItemIcon"/></span>
    }
    <span class="@Theme.RzDropdownMenu.MenuItemTitleSpan">@ChildContent</span>
    @if (ShortcutContent != null)
    {
        @ShortcutContent
    }
</HtmlElement>