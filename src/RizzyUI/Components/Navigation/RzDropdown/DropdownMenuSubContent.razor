
@namespace RizzyUI
@inherits RzComponent

<template x-teleport="#@ParentDropdownMenu?.Id">
	<div x-ref="subContent"
	     id="@SubContentId"
	     data-popover
	     tabindex="-1"
	     role="menu"
	     aria-labelledby="@SubTriggerId"
	     x-show="open"
	     x-cloak
	     x-on:click.outside="toggleSubmenu"
	     x-transition:enter="transition ease-out duration-100"
	     x-transition:enter-start="opacity-0 scale-95"
	     x-transition:enter-end="opacity-100 scale-100"
	     x-transition:leave="transition ease-in duration-75"
	     x-transition:leave-start="opacity-100 scale-100"
	     x-transition:leave-end="opacity-0 scale-95"
	     x-trap="open"
	     x-on:keydown.escape.prevent="handleSubmenuEscape"
	     x-on:keydown.arrowleft.prevent="handleSubmenuArrowLeft"
	     x-on:keydown.down.prevent="focusNextItem"
	     x-on:keydown.up.prevent="focusPreviousItem"
	     x-on:keydown.home.prevent="focusFirstItem"
	     x-on:keydown.end.prevent="focusLastItem"
	     @attributes="AdditionalAttributes"
	     class="@RootClass()">
		<div class="@Theme.RzDropdownMenu.SubContentInnerContainer">
			@ChildContent
		</div>
	</div>
</template>