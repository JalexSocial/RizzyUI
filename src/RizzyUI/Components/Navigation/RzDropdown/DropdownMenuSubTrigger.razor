
@namespace RizzyUI
@using Blazicons
@inherits RzComponent

<HtmlElement Element="@EffectiveElement"
             @attributes="@AdditionalAttributes"
             id="@TriggerId"
             class="@RootClass()"
             role="menuitem"
             tabindex="-1"
             aria-haspopup="menu"
             aria-controls="@SubContentId"
             x-ref="subTrigger"
             x-bind:aria-expanded="ariaExpanded"
             x-on:click.prevent="toggleSubmenu"
             x-on:keydown.enter.prevent="handleTriggerKeydown"
             x-on:keydown.space.prevent="handleTriggerKeydown"
             x-on:keydown.right.prevent="handleTriggerKeydown">
    @if (Icon != null)
    {
        <span class="@Theme.RzDropdownMenu.MenuItemIcon"><Blazicon Svg="@Icon"/></span>
    }
    @ChildContent
    <Blazicon Svg="MdiIcon.ChevronRight" class="@Theme.RzDropdownMenu.SubTriggerChevron" aria-hidden="true"/>
</HtmlElement>