
@namespace RizzyUI
@inherits RzComponent

<CascadingValue Value="this" IsFixed="true">
    <HtmlElement Element="@EffectiveElement"
                 @attributes="@AdditionalAttributes"
                 id="@Id"
                 class="@RootClass()"
                 x-data="rzDropdownSubmenu"
                 data-alpine-root="@Id"
                 x-on:mouseenter="openSubmenu"
                 x-on:mouseleave="closeSubmenu"
                 x-on:focusin="openSubmenu"
                 x-on:focusout="handleFocusOut">
        @ChildContent
    </HtmlElement>
</CascadingValue>