
@namespace RizzyUI
@using Blazicons
@inherits RzComponent<BreadcrumbSeparator.Slots>

<HtmlElement Element="@EffectiveElement"
             role="presentation"
             aria-hidden="true"
             @attributes="@AdditionalAttributes"
             id="@Id"
             class="@_slots.GetBase()"
             data-slot="breadcrumb-separator">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        <Blazicon Svg="MdiIcon.ChevronRight" class="@_slots.GetIcon()" />
    }
</HtmlElement>