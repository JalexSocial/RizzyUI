@namespace RizzyUI
@inherits RzComponent

@if (ParentProvider?.Collapsible == SidebarCollapsible.None)
{
	<div data-slot="sidebar" class="@RootClass()" @attributes="AdditionalAttributes">
		@ChildContent
	</div>
}
else
{
	<div class="@RootClass()"
	     x-bind:data-state="desktopState"
	     data-collapsible="@(ParentProvider?.Collapsible.ToString().ToLowerInvariant())"
	     data-variant="@Variant.ToString().ToLowerInvariant()"
	     data-side="@Side.ToString().ToLowerInvariant()"
	     data-slot="sidebar">

		<div class="md:hidden fixed inset-0 z-40 bg-black/50"
		     x-show="isMobileOpen"
		     x-cloak
		     x-on:click.self="close">
			<nav class="@Theme.Sidebar.Nav"
			     aria-label="@AriaLabel"
			     x-bind:data-mobile-state="mobileState">
				@ChildContent
			</nav>
		</div>

		<div class="hidden md:block">
			<div data-slot="sidebar-gap" class="@Theme.Sidebar.GetGapCss(Variant, Side)"></div>
			<div data-slot="sidebar-container" class="@Theme.Sidebar.GetDesktopContainerCss(Variant, Side)">
				<div data-sidebar="sidebar" data-slot="sidebar-inner" class="@Theme.Sidebar.GetDesktopInnerCss(Variant)">
					@ChildContent
				</div>
			</div>
		</div>
	</div>
}