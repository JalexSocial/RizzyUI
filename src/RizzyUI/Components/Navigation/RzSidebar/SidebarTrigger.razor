
@namespace RizzyUI
@inherits RzComponent

<HtmlElement Element="@EffectiveElement" 
             type="button"
             @attributes="AdditionalAttributes" 
             id="@Id" 
             class="@RootClass()"
             aria-label="@AriaLabel"
             x-on:click="toggle"
             aria-controls="@ParentProvider?.Id"
             x-bind:aria-expanded="isMobileOpen">
    @ChildContent
</HtmlElement>