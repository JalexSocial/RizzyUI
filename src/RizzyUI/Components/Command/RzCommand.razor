
@namespace RizzyUI
@inherits RzComponent<RzCommand.Slots>

<CascadingValue Value="this" IsFixed="true">
    <HtmlElement Element="@EffectiveElement" 
                 @attributes="AdditionalAttributes" 
                 id="@Id" 
                 class="@SlotClasses.GetBase()"
                 data-slot="command"
                 x-data="rzCommand"
                 data-alpine-root="@Id"
                 data-loop="@(Loop.ToString().ToLowerInvariant())"
                 data-should-filter="@(ShouldFilter.ToString().ToLowerInvariant())"
                 data-selected-value="@SelectedValue"
                 data-active-item-class="@ActiveItemClass"
                 data-group-heading-class="@GroupHeadingClass"
                 x-on:rz:command:select.window="
                    if ($event.target.id === '@Id') {
                        // This event is for two-way binding from Alpine to Blazor
                    }"
                 aria-label="@AriaLabel">
        @ChildContent
    </HtmlElement>
</CascadingValue>