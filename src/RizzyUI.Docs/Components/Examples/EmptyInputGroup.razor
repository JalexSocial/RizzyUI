
@namespace RizzyUI.Docs.Examples
@using RizzyUI

<RzEmpty>
    <EmptyHeader>
        <EmptyTitle>404 - Not Found</EmptyTitle>
        <EmptyDescription>
            The page you&apos;re looking for doesn&apos;t exist. Try searching for
            what you need below.
        </EmptyDescription>
    </EmptyHeader>
    <EmptyContent>
        <EditForm Model="_model" class="w-3/4">
            <RzInputGroup>
                <InputGroupInput For="@(() => _model.Query)" Placeholder="Try searching for pages..." />
                <InputGroupAddon>
                    <Blazicon Svg="Lucide.Search" />
                </InputGroupAddon>
                <InputGroupAddon Align="InputGroupAddonAlign.InlineEnd">
                    <kbd class="pointer-events-none inline-flex h-5 select-none items-center gap-1 rounded border bg-muted px-1.5 font-mono text-[10px] font-medium text-muted-foreground opacity-100">/</kbd>
                </InputGroupAddon>
            </RzInputGroup>
        </EditForm>
        <EmptyDescription>
            Need help? <a href="#" class="underline underline-offset-4">Contact support</a>
        </EmptyDescription>
    </EmptyContent>
</RzEmpty>

@code {
    private SearchModel _model = new();
    public class SearchModel { public string Query { get; set; } = string.Empty; }
}