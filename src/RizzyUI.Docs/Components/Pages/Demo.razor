@page "/demo"

@namespace RizzyUI
@inherits RzComponent
@using Blazicons
@using RizzyUI

@layout EmptyLayout

<HtmlElement Element="div" @attributes="AdditionalAttributes">
    <!-- Main Layout: Sidebar and Main Content -->
    <RzSidebar MainContentId="main-content">
        <NavbarContent>
	        <RzNavbar>
		        <div class="flex items-center pl-4 space-x-4">
			        <RzLink Href="#" Underline="true">Admin Dashboard</RzLink>
		        </div>
		        <div class="flex items-center space-x-4">
			        <!-- Dark mode toggle using our RizzyUI component -->
			        <RzDarkModeToggle />
		        </div>
	        </RzNavbar>
        </NavbarContent>
        <MenuContent>
	        <div class="p-1 mb-2">
                <RzSearchButton class="bg-surface" />
	        </div>
	        <RzSidebarLinks>
		        <RzSidebarLinkItem Href="#" Title="Dashboard" Icon="@MdiIcon.ViewDashboardOutline"/>
		        <RzSidebarLinkItem Href="#" Title="Users" Icon="@MdiIcon.AccountGroupOutline"/>
		        <RzSidebarLinkItem Href="#" Title="Reports" Icon="@MdiIcon.FileChartOutline"/>
		        <RzSidebarLinkItem Href="#" Title="Settings" Icon="@MdiIcon.CogOutline"/>
	        </RzSidebarLinks>
        </MenuContent>
        <MainContent>
            <!-- A Skip RzLink for accessibility -->
            <a class="sr-only" href="#main-content">Skip to main content</a>

            <!-- RzBreadcrumb Navigation -->
            <RzBreadcrumb Separator="@MdiIcon.ChevronRight">
                <RzBreadcrumbItem Href="#" Label="Home" IsActive="false" />
                <RzBreadcrumbItem Href="#" Label="Admin" IsActive="true" />
            </RzBreadcrumb>

            <!-- Dashboard Metrics -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                <RzCard>
                    <RzCardHeader>
                        <RzCardTitle>Total Users</RzCardTitle>
                    </RzCardHeader>
                    <RzCardBody>
                        <p class="text-2xl font-bold">1,024</p>
                        <p class="text-sm text-on-surface-muted">Registered Users</p>
                    </RzCardBody>
                    <RzCardFooter>
                        <p class="text-xs">Updated 5 mins ago</p>
                    </RzCardFooter>
                </RzCard>

                <RzCard>
                    <RzCardHeader>
                        <RzCardTitle>Active Sessions</RzCardTitle>
                    </RzCardHeader>
                    <RzCardBody>
                        <p class="text-2xl font-bold">256</p>
                        <p class="text-sm text-on-surface-muted">Users Online</p>
                    </RzCardBody>
                    <RzCardFooter>
                        <p class="text-xs">Real-time data</p>
                    </RzCardFooter>
                </RzCard>

                <RzCard>
                    <RzCardHeader>
                        <RzCardTitle>Revenue</RzCardTitle>
                    </RzCardHeader>
                    <RzCardBody>
                        <p class="text-2xl font-bold">$12,345</p>
                        <p class="text-sm text-on-surface-muted">Today</p>
                    </RzCardBody>
                    <RzCardFooter>
                        <p class="text-xs">Includes all transactions</p>
                    </RzCardFooter>
                </RzCard>
            </div>

            <!-- System Notification RzAlert -->
            <RzAlert Variant="AlertVariant.Information">
                <AlertTitle>System Notice</AlertTitle>
                <AlertDescription>Your system is running smoothly.</AlertDescription>
            </RzAlert>

            <!-- RzProgress Bar Example -->
            <div class="mt-6">
                <RzProgress CurrentValue="75" MinValue="0" MaxValue="100" Label="System Health: {percent}%" Variant="StatusColor.Success" />
            </div>
        </MainContent>
    </RzSidebar>
</HtmlElement>
