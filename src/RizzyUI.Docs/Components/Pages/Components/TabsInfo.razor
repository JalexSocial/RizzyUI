@page "/components/tabs"
@using RizzyUI

<PageTitle>Tabs</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzHeading Level="HeadingLevel.H1" class="scroll-mt-20">Tabs</RzHeading>
            <RzParagraph>
                Tabs are a great way to display different sections of your website. They can be used to indicate the current section, navigate to the next or previous section, and more.
            </RzParagraph>

            <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Default Tabs" class="scroll-mt-20">Default Tabs</RzHeading>
            <RzParagraph TextColor="SemanticColor.OnSurface">
                A list of tabs with a tab panel.
            </RzParagraph>

            <RzBrowser Layout="typeof(PreviewLayout)">
                <div class="grid-cols-1 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-1 2xl:grid-cols-1">
                    <RzTabs>
                        <Menu>
                            <RzTabStrip>
                                <RzTab Name="groups">Groups</RzTab>
                                <RzTab Name="likes">Likes</RzTab>
                                <RzTab Name="comments">Comments</RzTab>
                                <RzTab Name="saved">Saved</RzTab>
                            </RzTabStrip>
                        </Menu>
                        <TabPanels>
                            <RzTabPanel Name="groups"><strong><u>Groups</u></strong> tab is selected</RzTabPanel>
                            <RzTabPanel Name="likes"><strong><u>Likes</u></strong> tab is selected</RzTabPanel>
                            <RzTabPanel Name="comments"><strong><u>Comments</u></strong> tab is selected</RzTabPanel>
                            <RzTabPanel Name="saved"><strong><u>Saved</u></strong> tab is selected</RzTabPanel>
                        </TabPanels>
                    </RzTabs>
                </div>
            </RzBrowser>

            <RzCodeViewer Language=@CodeLanguage.Razor class="mb-10">
    &lt;RzTabs&gt;
        &lt;Menu&gt;
            &lt;RzTabStrip&gt;
                &lt;RzTab Name=&quot;groups&quot;&gt;Groups&lt;/Tab&gt;
