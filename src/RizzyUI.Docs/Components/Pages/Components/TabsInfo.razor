            <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Colored Tabs" class="scroll-mt-20">Colored Tabs</RzHeading>
            <RzParagraph TextColor="SemanticColor.OnSurface">
                A list of colored tabs with a tab panel.
            </RzParagraph>

            <RzBrowser Layout="typeof(PreviewLayout)">
                <div class="grid-cols-1 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-1 2xl:grid-cols-1">
                    <RzTabs SelectedTabName="events" 
                          TabBackgroundColor="SemanticColor.SurfaceAlt"
                          SelectedTabUnderlineColor="SemanticColor.Warning"
                          TabTextColor="SemanticColor.OnSurface"
                          SelectedTabTextColor="SemanticColor.OnSurfaceStrong">
                        <Menu>
                            <RzTabStrip Justify="Justify.Center" SpaceBetween="Size.Small">
                                <RzTab Name="activity">Activity</RzTab>
                                <RzTab Name="events">Events</RzTab>
                                <RzTab Name="pages">Pages</RzTab>
                                <RzTab Name="members">Members</RzTab>
                            </RzTabStrip>
                        </Menu>
                        <TabPanels>
                            <RzTabPanel Name="activity" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Activity Content</RzTabPanel>
                            <RzTabPanel Name="events" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Events Content</RzTabPanel>
                            <RzTabPanel Name="pages" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Pages Content</RzTabPanel>
                            <RzTabPanel Name="members" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Members Content</RzTabPanel>
                        </TabPanels>
                    </RzTabs>
                </div>
            </RzBrowser>

