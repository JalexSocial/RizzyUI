            &lt;RzTabPanel Name=&quot;pages&quot; class=&quot;bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4&quot;&gt;Pages Content&lt;/RzTabPanel&gt;
            &lt;RzTabPanel Name=&quot;members&quot; class=&quot;bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4&quot;&gt;Members Content&lt;/RzTabPanel&gt;
        &lt;/TabPanels&gt;
    &lt;/Tabs&gt;
            </RzCodeViewer>
        </MainContent>
    </RzArticle>
