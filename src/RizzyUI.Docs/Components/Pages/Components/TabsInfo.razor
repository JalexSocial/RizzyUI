            <Heading Level="HeadingLevel.H2" QuickReferenceTitle="Colored Tabs" class="scroll-mt-20">Colored Tabs</Heading>
            <Paragraph TextColor="SemanticColor.OnSurface">
                A list of colored tabs with a tab panel.
            </Paragraph>

            <Browser>
                <div class="grid-cols-1 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-1 2xl:grid-cols-1">
                    <Tabs SelectedTabName="events" 
                          TabBackgroundColor="SemanticColor.SurfaceAlt"
                          SelectedTabUnderlineColor="SemanticColor.Warning"
                          TabTextColor="SemanticColor.OnSurface"
                          SelectedTabTextColor="SemanticColor.OnSurfaceStrong">
                        <Menu>
                            <TabStrip Justify="Justify.Center" SpaceBetween="Size.Small">
                                <Tab Name="activity">Activity</Tab>
                                <Tab Name="events">Events</Tab>
                                <Tab Name="pages">Pages</Tab>
                                <Tab Name="members">Members</Tab>
                            </TabStrip>
                        </Menu>
                        <TabPanels>
                            <TabPanel Name="activity" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Activity Content</TabPanel>
                            <TabPanel Name="events" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Events Content</TabPanel>
                            <TabPanel Name="pages" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Pages Content</TabPanel>
                            <TabPanel Name="members" class="bg-surfaceAlt dark:bg-surfaceAltDark rounded-b p-4">Members Content</TabPanel>
                        </TabPanels>
                    </Tabs>
                </div>
            </Browser>

