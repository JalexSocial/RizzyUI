                                </DropdownMenuGroup>
                                <DropdownMenuSeparator />
                                <DropdownMenuItem Icon="MdiIcon.Logout">Sign Out</DropdownMenuItem>
                            </DropdownMenuContent>
                        </RzDropdownMenu>
                    </div>
                </RzBrowser>

