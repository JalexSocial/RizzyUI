    &lt;RzAvatar Size=&quot;Size.ExtraLarge&quot; /&gt;
	            </RzCodeViewer>

            </section>

            <section class="my-8 py-2">

	            <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="RzAvatar with Initials Placeholder" class="scroll-mt-20">
	                RzAvatar with Initials Placeholder
	            </RzHeading>
	            <RzParagraph TextColor="SemanticColor.OnSurface">
	                An avatar with an initials placeholder.
	            </RzParagraph>

	            <RzBrowser class="my-4">
	                <div class="grid-cols-2 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-2 2xl:grid-cols-4">
	                    <RzAvatar Size="Size.ExtraSmall" Initials="JS" />
	                    <RzAvatar Size="Size.Small" Initials="JS" />
	                    <RzAvatar Size="Size.Medium" Initials="JS" />
	                    <RzAvatar Size="Size.Large" Initials="JS" />
	                    <RzAvatar Size="Size.ExtraLarge" Initials="JS" />
	                </div>
	            </RzBrowser>

	            <RzCodeViewer Language=@CodeLanguage.Razor class="mb-10">
    &lt;RzAvatar Size=&quot;Size.ExtraSmall&quot; Initials=&quot;JS&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Small&quot; Initials=&quot;JS&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Medium&quot; Initials=&quot;JS&quot;/&gt;
