@page "/components/avatar"
@using RizzyUI

<PageTitle>RzAvatar</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzHeading Level="HeadingLevel.H1" class="scroll-mt-20">RzAvatar</RzHeading>
            <RzParagraph>
                RzAvatars are a great way to personalize your website and make it more engaging. They can be used to represent a person, a group of people, or even a brand.
            </RzParagraph>
			
            <section class="my-8 py-2">

	            <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Default RzAvatar" class="scroll-mt-20">Default RzAvatar</RzHeading>
	            <RzParagraph TextColor="SemanticColor.OnSurface">
	                A circle avatar in various sizes.
	            </RzParagraph>

	            <RzBrowser Layout="typeof(PreviewLayout)">
	                <div class="grid-cols-2 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-2 2xl:grid-cols-4">
	                    <RzAvatar Size="Size.ExtraSmall" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.Small" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.Medium" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.Large" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.ExtraLarge" ImageSource="/images/profile/51.jpg" />
	                </div>
	            </RzBrowser>

	            <RzCodeViewer Language=@CodeLanguage.Razor class="mb-10">
    &lt;RzAvatar Size=&quot;Size.ExtraSmall&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Small&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Medium&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Large&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.ExtraLarge&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
	            </RzCodeViewer>
			</section>

            <section class="my-8 py-2">

	            <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Square RzAvatar" class="scroll-mt-20">Square RzAvatar</RzHeading>
	            <RzParagraph>
	                A square avatar in various sizes.
	            </RzParagraph>

	            <RzBrowser class="my-4">
	                <div class="grid-cols-2 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-2 2xl:grid-cols-4">
	                    <RzAvatar Size="Size.ExtraSmall" Shape="AvatarShape.Square" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.Small" Shape="AvatarShape.Square" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.Medium" Shape="AvatarShape.Square" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.Large" Shape="AvatarShape.Square" ImageSource="/images/profile/51.jpg" />
	                    <RzAvatar Size="Size.ExtraLarge" Shape="AvatarShape.Square" ImageSource="/images/profile/51.jpg" />
	                </div>
	            </RzBrowser>

	            <RzCodeViewer Language=@CodeLanguage.Razor class="mb-10">
    &lt;RzAvatar Size=&quot;Size.ExtraSmall&quot; Shape=&quot;AvatarShape.Square&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Small&quot; Shape=&quot;AvatarShape.Square&quot; ImageSource=&quot;/images/profile/51.jpg&quot; /&gt;
    &lt;RzAvatar Size=&quot;Size.Medium&quot; Shape=&quot;AvatarShape.Square&quot; ImageSource=&quot;/images/profile/51.jpg&quot;/&gt;
    &lt;RzAvatar Size=&quot;Size.Large&quot; Shape=&quot;AvatarShape.Square&quot; ImageSource=&quot;/images/profile/51.jpg&quot;/&gt;
    &lt;RzAvatar Size=&quot;Size.ExtraLarge&quot; Shape=&quot;AvatarShape.Square&quot; ImageSource=&quot;/images/profile/51.jpg&quot;/&gt;
	            </RzCodeViewer>

            </section>


            <section class="my-8 py-2">

	            <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="RzAvatar with Icon Placeholder" class="scroll-mt-20">
	                RzAvatar with Icon Placeholder
	            </RzHeading>
	            <RzParagraph TextColor="SemanticColor.OnSurface">
	                An avatar in various sizes with an icon placeholder.
	            </RzParagraph>

	            <RzBrowser class="my-4">
	                <div class="grid-cols-2 mx-auto grid min-h-[18rem] place-content-evenly place-items-center gap-4 rounded-xl p-8 xl:grid-cols-2 2xl:grid-cols-4">
	                    <RzAvatar Size="Size.ExtraSmall" />
	                    <RzAvatar Size="Size.Small" />
	                    <RzAvatar Size="Size.Medium" />
	                    <RzAvatar Size="Size.Large" />
