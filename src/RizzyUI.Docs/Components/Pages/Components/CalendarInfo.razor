
@page "/components/calendar"
@namespace RizzyUI.Docs.Components.Pages.Components

@using RizzyUI
@using RizzyUI.Docs.Components.Pages.Components.Demo
@using Blazicons

<PageTitle>Calendar</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Calendar" class="scroll-mt-20">Calendar</RzHeading>
            <RzParagraph>
                A date field component that allows users to enter and edit date.
            </RzParagraph>
            
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Example" class="scroll-mt-20">
                    Example
                </RzHeading>
                <RzParagraph>
                    A calendar showing the current date.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                        <RzCalendar Mode="SelectionDatesMode.Single"
                                    @bind-Value="_selectedDate"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            @@bind-Value="_selectedDate"
            class="rounded-lg border" /&gt;

@@code {
    private DateOnly? _selectedDate = DateOnly.FromDateTime(DateTime.Now);
}
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Range Calendar" class="scroll-mt-20">
                    Range Calendar
                </RzHeading>
                <RzParagraph>
                    A calendar showing the current date and range selection.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                         <RzCalendar Mode="SelectionDatesMode.MultipleRanged"
                                    @bind-Range="_selectedRange"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.MultipleRanged"
            @@bind-Range="_selectedRange"
            class="rounded-lg border" /&gt;

@@code {
    private CalendarDateRange? _selectedRange = new CalendarDateRange
    {
        From = DateOnly.FromDateTime(DateTime.Now),
        To = DateOnly.FromDateTime(DateTime.Now.AddDays(7))
    };
}
                </RzCodeViewer>
            </section>

             <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Multi-Month" class="scroll-mt-20">
                    Multi-Month Calendar
                </RzHeading>
                <RzParagraph>
                    A calendar displaying multiple months at once.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                         <RzCalendar Mode="SelectionDatesMode.Single"
                                    Type="CalendarType.Multiple"
                                    Options="@(new VanillaCalendarOptions { DisplayMonthsCount = 2 })"
                                    @bind-Value="_selectedDate"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            Type="CalendarType.Multiple"
            Options="@@(new VanillaCalendarOptions { DisplayMonthsCount = 2 })"
            @@bind-Value="_selectedDate"
            class="rounded-lg border" /&gt;
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Disabled Dates" class="scroll-mt-20">
                    Disabled Dates
                </RzHeading>
                <RzParagraph>
                    A calendar with specific dates disabled.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                        <RzCalendar Mode="SelectionDatesMode.Single"
                                    @bind-Value="_selectedDate"
                                    MinDate="@DateOnly.FromDateTime(DateTime.Now.AddDays(-5))"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>
                 <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            @@bind-Value="_selectedDate"
            MinDate="@@DateOnly.FromDateTime(DateTime.Now.AddDays(-5))"
            class="rounded-lg border" /&gt;
                </RzCodeViewer>
            </section>

             <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Disabled Weekends" class="scroll-mt-20">
                    Disabled Weekends
                </RzHeading>
                <RzParagraph>
                    A calendar with weekends disabled.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                        <RzCalendar Mode="SelectionDatesMode.Single"
                                    @bind-Value="_selectedDate"
                                    Options="@(new VanillaCalendarOptions { DisableWeekdays = new[] { DayOfWeek.Saturday, DayOfWeek.Sunday } })"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            @@bind-Value="_selectedDate"
            Options="@@(new VanillaCalendarOptions { DisableWeekdays = new[] { DayOfWeek.Saturday, DayOfWeek.Sunday } })"
            class="rounded-lg border" /&gt;
                </RzCodeViewer>
            </section>
            
            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Custom Week Start" class="scroll-mt-20">
                    Custom Week Start
                </RzHeading>
                <RzParagraph>
                    A calendar where the week starts on Monday.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                        <RzCalendar Mode="SelectionDatesMode.Single"
                                    @bind-Value="_selectedDate"
                                    Options="@(new VanillaCalendarOptions { FirstWeekday = DayOfWeek.Monday })"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            @@bind-Value="_selectedDate"
            Options="@@(new VanillaCalendarOptions { FirstWeekday = DayOfWeek.Monday })"
            class="rounded-lg border" /&gt;
                </RzCodeViewer>
            </section>
            
             <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Week Numbers" class="scroll-mt-20">
                    Show Week Numbers
                </RzHeading>
                <RzParagraph>
                    A calendar displaying week numbers.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                        <RzCalendar Mode="SelectionDatesMode.Single"
                                    @bind-Value="_selectedDate"
                                    Options="@(new VanillaCalendarOptions { EnableWeekNumbers = true })"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            @@bind-Value="_selectedDate"
            Options="@@(new VanillaCalendarOptions { EnableWeekNumbers = true })"
            class="rounded-lg border" /&gt;
                </RzCodeViewer>
            </section>

             <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Multiple Selection" class="scroll-mt-20">
                    Multiple Selection
                </RzHeading>
                <RzParagraph>
                    A calendar allowing selection of multiple individual dates.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                        <RzCalendar Mode="SelectionDatesMode.Multiple"
                                    @bind-Values="_selectedDates"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Multiple"
            @@bind-Values="_selectedDates"
            class="rounded-lg border" /&gt;

@@code {
    private List&lt;DateOnly&gt; _selectedDates = new() { 
        DateOnly.FromDateTime(DateTime.Now),
        DateOnly.FromDateTime(DateTime.Now.AddDays(2)),
        DateOnly.FromDateTime(DateTime.Now.AddDays(5))
    };
}
                </RzCodeViewer>
            </section>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Localization" class="scroll-mt-20">
                    Localization
                </RzHeading>
                <RzParagraph>
                    A calendar localized to a different language (e.g., Spanish). Note: Vanilla Calendar supports BCP 47 language tags.
                </RzParagraph>

                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto flex justify-center items-center p-8 min-h-60">
                         <RzCalendar Mode="SelectionDatesMode.Single"
                                    @bind-Value="_selectedDate"
                                    Options="@(new VanillaCalendarOptions { Locale = "es-ES" })"
                                    class="rounded-lg border" />
                    </div>
                </RzBrowser>

                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzCalendar Mode="SelectionDatesMode.Single"
            @@bind-Value="_selectedDate"
            Options="@@(new VanillaCalendarOptions { Locale = "es-ES" })"
            class="rounded-lg border" /&gt;
                </RzCodeViewer>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>

@code {
    private DateOnly? _selectedDate = DateOnly.FromDateTime(DateTime.Now);
    
    private List<DateOnly> _selectedDates = new() { 
        DateOnly.FromDateTime(DateTime.Now),
        DateOnly.FromDateTime(DateTime.Now.AddDays(2)),
        DateOnly.FromDateTime(DateTime.Now.AddDays(5))
    };

    private CalendarDateRange? _selectedRange = new CalendarDateRange
    {
        From = DateTime.Now,
        To = DateTime.Now.AddDays(7)
    };
}