
@page "/components/chart-scatter"
@namespace RizzyUI.Pages
@using RizzyUI
@using RizzyUI.Charts
@inherits RzComponent

<PageTitle>Scatter Chart Examples</PageTitle>

<RzQuickReferenceContainer>
    <RzArticle ProseWidth="ProseWidth.UltraWide">
        <SideContent>
            <RzQuickReference />
        </SideContent>
        <MainContent>
            <RzBreadcrumb class="mb-4 not-prose">
                <BreadcrumbList>
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Docs</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbLink Href="/components" hx-boost="true" hx-select="#content" hx-target="#content" hx-swap="outerHTML">Components</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbSeparator />
                    <BreadcrumbItem>
                        <BreadcrumbPage>Chart Scatter Examples</BreadcrumbPage>
                    </BreadcrumbItem>
                </BreadcrumbList>
            </RzBreadcrumb>

            <RzHeading Level="HeadingLevel.H1" QuickReferenceTitle="Scatter Chart Examples" class="scroll-mt-20">Scatter Chart Examples</RzHeading>
            <RzParagraph>
                Scatter charts are based on basic line charts with the x-axis changed to a linear axis.
                To use a scatter chart, data must be passed as objects containing X and Y properties.
            </RzParagraph>

            <section class="my-8 py-2">
                <RzHeading Level="HeadingLevel.H2" QuickReferenceTitle="Basic Usage" class="scroll-mt-20">Basic Usage</RzHeading>
                <RzBrowser Layout="typeof(PreviewLayout)">
                    <div class="mx-auto mb-5 h-96 w-full max-w-4xl items-center justify-center p-8">
                        <RzChart Configure=@(c => c
                            .Data(d => d
                                .Datasets(ds => ds
                                    .Scatter()
                                    .Label("Scatter Dataset")
                                    .Data(new object[] {
                                        new { x = -10, y = 0 },
                                        new { x = 0, y = 10 },
                                        new { x = 10, y = 5 },
                                        new { x = 0.5, y = 5.5 }
                                    })
                                    .BackgroundColor("var(--chart-1)")
                                )
                            )
                            .Options(o => o
                                .Responsive(true)
                                .MaintainAspectRatio(false)
                                .Scales(s => s
                                    .ScaleId("x")
                                    .Type("linear")
                                    .Position(AxisPosition.Bottom)
                                )
                                .Plugins(p => p.Title(t => t.Display(true).Text("Chart.js Scatter Chart")))
                            )) />
                    </div>
                </RzBrowser>
                <RzCodeViewer Language="@CodeLanguage.Razor" class="mb-10">
&lt;RzChart Configure=@@(c =&gt; c
    .Data(d =&gt; d
        .Datasets(ds =&gt; ds
            .Scatter()
            .Label(&quot;Scatter Dataset&quot;)
            .Data(new object[] {
                new { x = -10, y = 0 },
                new { x = 0, y = 10 },
                new { x = 10, y = 5 },
                new { x = 0.5, y = 5.5 }
            })
            .BackgroundColor(&quot;var(--chart-1)&quot;)
        )
    )
    .Options(o =&gt; o
        .Responsive(true)
        .MaintainAspectRatio(false)
        .Scales(s =&gt; s
            .ScaleId(&quot;x&quot;)
            .Type(&quot;linear&quot;)
            .Position(AxisPosition.Bottom)
        )
        .Plugins(p =&gt; p.Title(t =&gt; t.Display(true).Text(&quot;Chart.js Scatter Chart&quot;)))
    )) /&gt;
                </RzCodeViewer>
            </section>
        </MainContent>
    </RzArticle>
</RzQuickReferenceContainer>