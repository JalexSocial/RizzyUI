@namespace RizzyUI.Docs.Components.Layout
@using RizzyUI
@using Blazicons

<footer class="bg-background border-border mt-60 border-t">
    <div class="px-4">
        <div class="mx-auto max-w-7xl">
            <div class="border-border text-muted-foreground flex flex-col items-start justify-between gap-10 border-b py-10 md:flex-row">
                <!-- Brand -->
                <div class="flex flex-col gap-4">
                    <div class="flex items-center gap-3">
                        <img class="size-10" src="/images/rizzy-icon.svg" alt="RizzyUI Icon" />
                        <span class="text-foreground text-2xl font-bold tracking-tight">RizzyUI</span>
                    </div>
                    <p class="max-w-[410px] text-sm leading-relaxed">
                        Blazor SSR-only components based on the shadcn/ui design system.
                    </p>
                </div>

                <!-- Links -->
                <div class="flex w-full flex-wrap justify-between gap-8 md:w-3/5">
                    <!-- Documentation -->
                    <div class="flex flex-col gap-2">
                        <h3 class="text-foreground mb-2 text-base font-semibold">Documentation</h3>
                        <ul class="space-y-2 text-sm">
                            <li><a href="/" class="transition-colors hover:text-foreground hover:underline">Docs</a></li>
                            <li><a href="/themes" class="transition-colors hover:text-foreground hover:underline">Themes</a></li>
                            <li><a href="/components" class="transition-colors hover:text-foreground hover:underline">Components</a></li>
                            <li><a href="/docs/interactivity/introduction" class="transition-colors hover:text-foreground hover:underline">Interactivity</a></li>
                        </ul>
                    </div>

                    <!-- Resources -->
                    <div class="flex flex-col gap-2">
                        <h3 class="text-foreground mb-2 text-base font-semibold">Resources</h3>
                        <ul class="space-y-2 text-sm">
                            <li><a href="https://github.com/jalexsocial/Rizzy" target="_blank" class="transition-colors hover:text-foreground hover:underline">Rizzy Github</a></li>
                            <li><a href="https://jalexsocial.github.io/rizzy.docs/" target="_blank" class="transition-colors hover:text-foreground hover:underline">Rizzy Documentation</a></li>
                            <li><a href="https://github.com/jalexsocial/RizzyUI" target="_blank" class="transition-colors hover:text-foreground hover:underline">RizzyUI Github</a></li>
                            <li><a href="https://www.nuget.org/packages?q=Rizzy" target="_blank" class="transition-colors hover:text-foreground hover:underline">NuGet</a></li>
                            <li><a href="https://www.npmjs.com/package/@@jalexsocial/rizzyui" target="_blank" class="transition-colors hover:text-foreground hover:underline">NPM</a></li>
                            <li><a href="https://github.com/JalexSocial/RizzyUI/blob/main/LICENSE.md" target="_blank" class="transition-colors hover:text-foreground hover:underline">License</a></li>
                        </ul>
                    </div>

                    <!-- Follow Us -->
                    <div class="flex flex-col gap-2">
                        <h3 class="text-foreground mb-2 text-base font-semibold">Follow Us</h3>
                        <ul class="space-y-2 text-sm">
                            <li>
                                <a href="https://github.com/jalexsocial/RizzyUI" target="_blank" class="flex items-center gap-2 transition-colors hover:text-foreground hover:underline">
                                    <Blazicon Svg="MdiIcon.Github" class="text-lg" /> GitHub
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Copyright -->
    <p class="text-muted-foreground/80 py-6 text-center text-sm">
        Copyright 2026 © Michael Tanczos
    </p>
</footer>