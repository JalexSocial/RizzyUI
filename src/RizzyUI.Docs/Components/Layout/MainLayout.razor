@inherits LayoutComponentBase
@using RizzyUI

<Sidebar>
    <NavbarContent>
        <Navbar>
            <div>
                <!-- logo  -->
                <a href="/" class="text-2xl font-bold text-black dark:text-white">
                    <span class="sr-only">RizzyUI Home</span>
                    <div class="w-32 md:w-50 px-2">
                        <img src="/images/rizzy-logo-wb.svg" alt="RizzyUI" class="w-full h-full"/>
                    </div>
                </a>            
            </div>
            <div class="flex items-center gap-4">
                <DarkmodeToggle/>
            </div>
        </Navbar>
    </NavbarContent>
    <MenuContent>


        <!-- search  -->
        <div class="relative my-4 flex w-full max-w-xs flex-col gap-1 text-slate-700 dark:text-slate-300">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="2" class="-translate-y-1/2 text-slate-700/50 absolute left-2 top-1/2 size-5 dark:text-slate-300/50" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"/>
            </svg>
            <input type="search" class="w-full rounded-xl border border-slate-300 bg-white px-2 py-1.5 pl-9 text-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-700 disabled:cursor-not-allowed disabled:opacity-75 dark:border-slate-700 dark:bg-slate-900/50 dark:focus-visible:outline-blue-600" name="search" aria-label="Search" placeholder="Search"/>
        </div>

        <SidebarLinks>
            <SidebarLinkItem Icon="MdiIcon.ViewDashboard" Title="Home" Href="/"/>
            <SidebarLinkItem Icon="MdiIcon.PaletteSwatchVariant" Title="Themes" Href="/themes" hx-boost="true" />

            <SidebarLinkItem Icon="MdiIcon.FormSelect" Title="Forms" Collapsible="false">
                <SidebarLinkItem Title="Buttons" Href="/components/buttons" />
                <SidebarLinkItem Title="Checkbox" Href="/components/checkboxgroup" />
                <SidebarLinkItem Title="Text" Href="/components/textedit" />
                <!--
                <SidebarLinkItem Title="Combobox" Href="/components/combobox" />
                <SidebarLinkItem Title="Counter" Href="/components/counter" />
                <SidebarLinkItem Title="File Input" Href="/components/fileinput" />
                <SidebarLinkItem Title="Radio" Href="/components/radio" />
                <SidebarLinkItem Title="Range" Href="/components/range" />
                <SidebarLinkItem Title="Rating" Href="/components/rating" />
                <SidebarLinkItem Title="Select" Href="/components/select" />
                <SidebarLinkItem Title="Text Input" Href="/components/textinput" />
                <SidebarLinkItem Title="Textarea" Href="/components/textarea" />
                <SidebarLinkItem Title="Toggle" Href="/components/toggle" />
                -->
            </SidebarLinkItem>

            <SidebarLinkItem Icon="MdiIcon.Navigation" Title="Navigation" Collapsible="false">
                <SidebarLinkItem Title="Breadcrumb" Href="/components/breadcrumb" />
                <SidebarLinkItem Title="Dropdown" Href="/components/dropdown" />
                <SidebarLinkItem Title="Link" Href="/components/link" />
                <SidebarLinkItem Title="Navbar" Href="/components/navbar" />
                <!--
                <SidebarLinkItem Title="Paginations" Href="/components/paginations" />
                -->
                <SidebarLinkItem Title="Sidebar" Href="/components/sidebar" />
                <SidebarLinkItem Title="Tabs" Href="/components/tabs" />
            </SidebarLinkItem>

            <SidebarLinkItem Icon="MdiIcon.ViewList" Title="Display" Collapsible="false">
                <SidebarLinkItem Title="Avatar" Href="/components/avatar" hx-boost="true"/>
                <SidebarLinkItem Title="Badge" Href="/components/badge" />
                <SidebarLinkItem Title="Divider" Href="/components/divider" />
                <SidebarLinkItem Title="Table" Href="/components/table" />
                <SidebarLinkItem Title="Progress" Href="/components/progress" />
                <!--
                <SidebarLinkItem Title="Counter" Href="/components/counter" />
                <SidebarLinkItem Title="Rating" Href="/components/rating" />
                -->
            </SidebarLinkItem>

            <SidebarLinkItem Icon="MdiIcon.Alert" Title="Feedback" Collapsible="false">
                <SidebarLinkItem Title="Alert" Href="/components/alert" />
                <SidebarLinkItem Title="Toast Notification" Href="/components/toastnotification" />
                <SidebarLinkItem Title="Modal" Href="/components/modal" />
                <SidebarLinkItem Title="Tooltip" Href="/components/tooltip" />
                <SidebarLinkItem Title="Spinner" Href="/components/spinner" />
                <SidebarLinkItem Title="Skeleton" Href="/components/skeleton" />
                <SidebarLinkItem Title="Steps" Href="/components/steps" />
            </SidebarLinkItem>

            <SidebarLinkItem Icon="MdiIcon.ViewGrid" Title="Layout" Collapsible="false">
                <SidebarLinkItem Title="Card" Href="/components/card" />
                <SidebarLinkItem Title="Markdown" Href="/components/markdown" />
                <SidebarLinkItem Title="Accordion" Href="/components/accordion" />
                <!--
                <SidebarLinkItem Title="Banner" Href="/components/banner" />
                <SidebarLinkItem Title="Carousel" Href="/components/carousel" />
                <SidebarLinkItem Title="Chat Bubble" Href="/components/chatbubble" />
                -->
            </SidebarLinkItem>
            <!--
            <SidebarLinkItem Icon="MdiIcon.Apps" Title="Miscellaneous" Collapsible="false">
                <SidebarLinkItem Title="KBD" Href="/components/kbd" />
                <SidebarLinkItem Title="Chat Bubble" Href="/components/chatbubble" />
            </SidebarLinkItem>
            -->
        </SidebarLinks>

    </MenuContent>
    <MainContent>
        @Body
    </MainContent>
</Sidebar>

